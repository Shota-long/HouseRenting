<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 <hibernate-mapping package="com.renting.domain">
 	<class name="com.renting.domain.House" table="houseInfo_table">
 		<id name="house_id" column="house_id">
 		<!-- 主键生成策略 自动生成-->
 			<generator class="native"></generator>
 		</id>
 		<property name="user_id" column="user_id" ></property>
 		<property name="title" column="title" ></property>
 		<property name="location" column="location" ></property>
 		<property name="price" column="price" ></property>
 		<property name="deposit_way" column="deposit_way"></property>
 		<property name="rent_way" column="rent_way"></property>
 		<property name="type" column="type"></property>
 		<property name="area" column="area"></property>
 		<property name="decoration" column="decoration"></property>
 		<property name="floor" column="floor"></property>
 		<property name="address" column="address"></property>
 		<property name="description" column="description"></property>
 		<property name="grade" column="grade"></property>
 		<property name="flag" column="flag"></property>
 		<!--  
 		<property name="collect_time" type="java.util.Date">
 		</property>
 		-->
 	</class>
 </hibernate-mapping>